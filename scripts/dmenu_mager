DMENU="rofi -dmenu -i -p Mager"
OPTIONS=$(echo -e "anime\naria2\nboottester\nkill\nmonitor\nmpdmenu\npass\npower\nqutebrowser\nrecord\nswitcher\nsystemd\ntodo\nudiskie\nwifi\nwindow\nytview\nmpv\nscreenshot\ntranslate" | sort | $DMENU)

case "$OPTIONS" in
    anime) dmenu_anime ;;
    aria2) dmenu_aria2 ;;
    boottester) dmenu_boottester ;;
    kill) dmenu_kill ;;
    monitor) dmenu_monitor ;;
    mpdmenu) dmenu_mpdmenu ;;
    pass) dmenu_pass -p "Pass Man" ;;
    power) dmenu_power ;;
    qutebrowser) dmenu_qutebrowser ;;
    record) dmenu_record ;;
    switcher) dmenu_switcher ;;
    systemd) dmenu_systemd ;;
    todo) dmenu_todo ;;
    udiskie) dmenu_udiskie ;;
    wifi) dmenu_wifi ;;
    window) dmenu_window ;;
    ytview) dmenu_ytview ;;
    mpv) dmenu_mpv ;;
    screenshot) dmenu_screenshot ;;
    translate) dmenu_translate;;
esac
